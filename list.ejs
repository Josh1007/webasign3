<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<main>

  <div class="box">
  <div class="row">
  <div class="col-md-offset-3 col-md-12">
  <h1><%= title %></h1>
  <a href="/Cars-list/add" class="btn btn-primary" role="button">
      <i class="fas fa-plus-circle"></i> Add a Car
  </a>


  


  <br>
  <table class= "table table-bordered table-dark">
  
  <%/* table table-bordered table-striped table-hover */%> 

  <tr class="d-flex">
  <th class="text-center col-1">Car Model</th>
  <th class="text-center col-1">Owner</th>
  <th class="text-center col-1">Year</th>
  <th class="text-center col-6">Description</th>
  <th class="text-center col-1">Price</th>
  <th class="text-center col-1">Edit</th>
  <th class="text-center col-1">Delete</th>
  </tr>

  <% for(let count=0; count<Carslist.length; count++) { %>
      <tr class="d-flex">
      <td class="text-center col-1"><%= Carslist[count].Car_Model %></td>
      <td class="text-center col-1"><%= Carslist[count].Owner %></td>
      <td class="text-center col-1"><%= Carslist[count].Year %></td>
      <td class="text-center col-"><%= Carslist[count].Description %></td>
      <td class="text-center col-1"><%= Carslist[count].Price %></td>
      <td class="text-center col-1">
          <a href="/Cars-list/edit/<%= Carslist[count]._id %>"
              class="btn btn-primary">
              <i class="fas fa-pencil-alt"></i> Edit </a>
      </td>
      <td class="text-center col-1">
          <a href="/Cars-list/delete/<%= Carslist[count]._id %>"
              class="btn btn-danger">
              <i class="fas fa-trash-alt"></i> Delete </a>
      </td>

      </tr>
  
  
  <% } %>
  </table>
</div>
</div>



</main>
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>